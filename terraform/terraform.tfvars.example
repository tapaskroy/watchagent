# AWS Configuration
aws_region  = "us-east-1"
environment = "prod"

# Domain Configuration
domain_name = "tapaskroy.me"
subdomain   = "watchagent"

# Database Configuration
db_instance_class     = "db.t3.micro"
db_allocated_storage  = 20

# Redis Configuration
redis_node_type       = "cache.t3.micro"
redis_num_cache_nodes = 1

# ECS Configuration
api_cpu            = 512
api_memory         = 1024
api_desired_count  = 2

web_cpu            = 512
web_memory         = 1024
web_desired_count  = 2

# Auto Scaling
api_autoscaling_min = 1
api_autoscaling_max = 4

web_autoscaling_min = 1
web_autoscaling_max = 4

# API Keys (DO NOT COMMIT - Set via environment variables or AWS Secrets Manager)
# These will be stored in AWS Secrets Manager
# Pass them via command line: terraform apply -var="tmdb_api_key=YOUR_KEY"
# Or set environment variables: export TF_VAR_tmdb_api_key=YOUR_KEY

